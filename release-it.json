{
  "git": {
    "commitMessage": "chore: release v${version}",
    "changelog": "git log --pretty=format:'* %s (%h)' [REV_RANGE]"
  },
  "github": {
    "release": true,
    "tokenRef": "PERSONAL_ACCESS_TOKEN",
    "autoGenerate": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  }
}
