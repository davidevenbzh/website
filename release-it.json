{
  "git": {
    "commitMessage": "chore: release v${version}",
    "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...\"${to}\""
  },
  "hooks": {
    "after:bump": "npx auto-changelog -p"
  },
  "github": {
    "release": true,
    "tokenRef": "PERSONAL_ACCESS_TOKEN"
  },
  "npm": "false",
  "verbose": 2
}
